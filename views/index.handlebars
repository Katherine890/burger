<h1>Eat-Da-Burger</h1>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block devoured=false}}
  {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block devoured=true}}
  {{/if}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <label for="burger"></label>
    <textarea type="text" id="burger" name="name"></textarea>
  </div>
  <br>

  <button type="submit">Submit</button>
</form>

<h4>Enter a burger you want to eat. Click the "Submit" button.</h4>